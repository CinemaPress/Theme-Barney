doctype html
html(lang='ru-RU')
    head
        include head
    body
        .header_black
        .wrapper
            .contener
                .contener2
                    .content
                        .rek_top
                            h1!= title
                        div(style='border-top: 1px solid #404040;background: #2b2b2b;position: relative;border-left: 1px solid #404040;')
                        #content
                            .bot-left
                                .bot-navigation(style='text-align:center;')
                                    if sort
                                        each s in sort
                                            if (s.active)
                                                if s.active == 'up'
                                                    a(href=s.url, style='background-color:#505050;color:#a3a3a3;border:1px solid #9b9b9b')
                                                        != s.name
                                                else
                                                    a(href=s.url, style='background-color:#505050;color:#a3a3a3;border:1px solid #9b9b9b')
                                                        != s.name
                                            else
                                                a(href=s.url)!= s.name
                            if movies && movies.length
                                each movie in movies
                                    .shortstory(style='width:95%;')
                                        .shortstorytitle
                                            h2.zagolovki
                                                a(href=movie.url)= movie.title_ru + ' (' + movie.year + ')'
                                        .shortimg
                                            a(href=movie.url)
                                                img(src=movie.poster, style='float:left; width:200px;', alt=movie.title_ru + ' (' + movie.year + ')', title=movie.title_ru + ' (' + movie.year + ')')
                                            if movie.description
                                                = movie.description
                                                br
                                                br
                                            b Год выпуска:
                                            != ' ' + movie.year_url
                                            br
                                            if movie.countries_url
                                                b Страна:
                                                != ' ' + movie.countries_url
                                                br
                                            if movie.genres_url
                                                b Жанр:
                                                != ' ' + movie.genres_url
                                                br
                                            b Премьера:
                                            != ' ' + movie.premiere
                                            br
                                            br
                                            if movie.kp_rating
                                                b(style='color:#fff;') Рейтинг КиноПоиск:
                                                != ' ' + movie.kp_rating / 10 + ' (' + movie.kp_vote + ')'
                                                br
                                            if movie.imdb_rating
                                                b(style='color:#fff;') Рейтинг IMDB:
                                                != ' ' + movie.imdb_rating / 10 + ' (' + movie.imdb_vote + ')'
                                                br
                                    div(style='clear:both')
                                    .icons
                                        span.podrobnee(style='padding: 4px 0 4px 20px;')
                                            a(href=movie.url)
                                                span.fbutton-img
                                                    img(src='/themes/barney/public/img/viewmore.png', border='0', alt='Смотреть ' + movie.title_ru + ' (' + movie.year + ')' + ' онлайн')
                            else
                                div(style='margin:100px; padding: 20px; color: #fff; text-align:center;')
                                    | Фильмов не найдено!
                            div(style='clear:both')
                            .bot-left
                                .bot-navigation(align='center')
                                    if page.prev
                                        a(href=page.prev)
                                            | Предыдущая страница
                                    b= ' '
                                    span= page.current
                                    b= ' '
                                    if page.next
                                        a(href=page.next)
                                            | Следующая страница
                    span.leftblok_contener
                        include leftmenu
            .header
                include header
            .footer
                include footer