doctype html
html(lang='ru-RU')
    head
        include head
    body
        .header_black
        .wrapper
            .contener
                .contener2
                    .content
                        if year && year.length
                            .rek_top
                                h1= 'Лучшие фильмы года'
                            div(style='border-top: 1px solid #404040;background: #2b2b2b;position: relative;border-left: 1px solid #404040;')
                                each movie in year
                                    .shortstory(style='width:95%;')
                                        .shortstorytitle
                                            h2.zagolovki
                                                a(href=movie.url)= movie.title_ru + ' (' + movie.year + ')'
                                        .shortimg
                                            a(href=movie.url)
                                                img(src=movie.poster, style='float:left; width:200px;', alt=movie.title_ru + ' (' + movie.year + ')', title=movie.title_ru + ' (' + movie.year + ')')
                                            if movie.description
                                                = movie.description
                                                br
                                                br
                                            b Год выпуска:
                                            != ' ' + movie.year_url
                                            br
                                            if movie.countries_url
                                                b Страна:
                                                != ' ' + movie.countries_url
                                                br
                                            if movie.genres_url
                                                b Жанр:
                                                != ' ' + movie.genres_url
                                                br
                                            b Премьера:
                                            != ' ' + movie.premiere
                                            br
                                            br
                                            if movie.kp_rating
                                                b(style='color:#fff;') Рейтинг КиноПоиск:
                                                != ' ' + movie.kp_rating / 10 + ' (' + movie.kp_vote + ')'
                                                br
                                            if movie.imdb_rating
                                                b(style='color:#fff;') Рейтинг IMDB:
                                                != ' ' + movie.imdb_rating / 10 + ' (' + movie.imdb_vote + ')'
                                                br
                                    div(style='clear:both')
                                    .icons
