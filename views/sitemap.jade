doctype xml
if movies && movies.length
    urlset(xmlns='http://www.sitemaps.org/schemas/sitemap/0.9')
        each movie in movies
            url
                loc= 'http://' + domain + '' + decodeURIComponent(movie.url)
                lastmod= movie.premiere.replace(/([0-9]{4})/, 2015)

else
    sitemapindex
        sitemap
            - n = 2016
            while n > 1900
                loc
                    = 'http://' + domain + '/' + urls.sitemap + '/' + n--